<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/c_actionBar</item>
        <item name="colorPrimaryDark">@color/c_statusBar</item>
    </style>

    <style name="stl_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_size_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/c_view</item>

        <item name="android:textSize">@dimen/d_text_20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/c_text</item>
        <item name="android:layout_marginBottom">@dimen/d_size_20dp</item>
    </style>
</resources>
